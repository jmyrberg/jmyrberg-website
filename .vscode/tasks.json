{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Development - Backend",
            "type": "shell",
            "command": "source ./scripts/run-backend-functions.sh"
        },
        {
            "label": "Development - UI",
            "type": "shell",
            "command": "source ~/.zshrc && cd ui && npm run serve"
        },
        {
            "label": "Deploy - Backend function",
            "type": "shell",
            "command": "source ~/.zshrc && gcloud functions deploy ${input:name} --runtime python310 --trigger-http --allow-unauthenticated --memory ${input:memory} --source ${workspaceFolder}/functions/${input:name} --region europe-west1 --max-instances ${input:max-instances} --timeout ${input:timeout} --set-env-vars \"$(paste -d, -s ./functions/.env.production)\""
        },
        {
            "label": "Deploy - UI",
            "type": "shell",
            "command": "source ~/.zshrc && cd ui && npm run deploy",
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "name",
            "description": "Name of the function",
            "default": ""
        },
        {
            "type": "pickString",
            "id": "memory",
            "description": "Memory allocated for the function",
            "default": "128MB",
            "options": ["128MB", "256MB", "512MB", "1024MB", "2048MB"]
        },
        {
            "type": "pickString",
            "id": "timeout",
            "description": "Timeout for the function",
            "default": "60",
            "options": ["10", "60", "120", "180", "240", "540"]
        },
        {
            "type": "promptString",
            "id": "max-instances",
            "description": "Maximum number of instances",
            "default": "1"
        },
    ]
}